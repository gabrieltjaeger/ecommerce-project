
{% extends 'base.html.twig' %}

{% block title %}Painel Admin
{% endblock %}

{% block content %}
<div class="content-wrapper">
	<div class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0">Lista de Usuários</h1>
				</div>
				<div class="col-sm-6">
					{% set breadcrumb_items = [
						{ 'href': '/admin', 'label': 'Home' },
						{ 'href': '/admin/users', 'label': 'Usuários' }
					] %}
					{% include 'components/_breadcrumb.html.twig' with { items: breadcrumb_items } %}
				</div>
			</div>
		</div>
	</div>
	<div class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					{% set card_body %}
						<div class="mb-3 col-2 px-0">
							<a href="/admin/users/create" class="btn btn-block btn-primary">Cadastrar Usuário</a>
						</div>
						<table id="example2" class="table table-bordered table-hover">
							<thead>
								<tr>
									<th>Nome</th>
									<th>E-mail</th>
									<th>Login</th>
									<th>Admin</th>
									<th>Ações</th>
								</tr>
							</thead>
							<tbody>
								{% for user in users %}
									<tr>
										<td>{{ user.person.name }}</td>
										<td>{{ user.person.email }}</td>
										<td>{{ user.login }}</td>
										<td>{{ user.isAdmin ? 'Sim' : 'Não' }}</td>
										<td>
											<a href="/admin/users/{{ user.id }}" class="btn btn-primary btn-xs">
												<i class="fa fa-edit"></i>
												Editar</a>
											<a href="/admin/users/{{ user.id }}/delete" onclick="return confirm('Deseja realmente excluir este registro?')" class="btn btn-danger btn-xs">
												<i class="fa fa-trash"></i>
												Excluir</a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					{% endset %}
					{% include 'components/_card.html.twig' with {
						card_header: null,
						outline: false,
						card_body: card_body
					} %}
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Painel Admin
{% endblock %}

{% block content %}
	<div class="content-wrapper">
		<div class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1 class="m-0">Editar Usu치rio</h1>
					</div>
					<div class="col-sm-6">
						{% set breadcrumb_items = [
						{ 'href': '/admin', 'label': 'Home' },
						{ 'href': '/admin/users', 'label': 'Usu치rios' },
						{ 'label': 'Editar Usu치rio' }
					] %}
						{% include 'components/_breadcrumb.html.twig' with { items: breadcrumb_items } %}
					</div>
				</div>
			</div>
		</div>
		<div class="content">
			<div class="container-fluid">
				<div class="row">
					<div class="col-lg-12">
						{% set card_body %}
						<form role="form" action="/admin/users/{{ user.id }}" method="post">
							{% include 'components/_form-group.html.twig' with { id: 'name', label: 'Nome', name: 'name', placeholder: 'Digite o nome', value: user.person.name } %}
							{% include 'components/_form-group.html.twig' with { id: 'login', label: 'Login', name: 'login', placeholder: 'Digite o login', value: user.login } %}
							{% include 'components/_form-group.html.twig' with { id: 'phone', label: 'Telefone', name: 'phone', type: 'tel', placeholder: 'Digite o telefone', value: user.person.phone } %}
							{% include 'components/_form-group.html.twig' with { id: 'email', label: 'E-mail', name: 'email', type: 'email', placeholder: 'Digite o e-mail', value: user.person.email } %}
							{% include 'components/_checkbox.html.twig' with { name: 'isAdmin', label: 'Acesso de Administrador', checked: user.isAdmin } %}
							<button type="submit" class="btn btn-primary mt-3">Salvar</button>
						</form>
						{% endset %}
						{% include 'components/_card.html.twig' with {
						card_header: 'Editar Usu치rio',
						outline: false,
						card_body: card_body
					} %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Painel Admin
{% endblock %}

{% block content %}
<div class="content-wrapper">
	<section class="content-header">
		<h1>Lista de Usu치rios</h1>
		<ol class="breadcrumb">
			<li>
				<a href="/admin">
					<i class="fa fa-dashboard"></i>
					Home</a>
			</li>
			/
			<li>
				<a href="/admin/users">Usu치rios</a>
			</li>
			/
			<li class="active">Editar Usu치rio</li>
		</ol>
	</section>

	<section class="content">
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<h3 class="card-title">Editar Usu치rio</h3>
					</div>
					<div class="card-body">
						<form role="form" action="/admin/users/{{ user.id }}" method="post">
							<div class="form-group">
								<label for="name">Nome</label>
								<input type="text" class="form-control" id="name" name="name" placeholder="Digite o nome" value={{ user.person.name }}>
							</div>
							<div class="form-group">
								<label for="login">Login</label>
								<input type="text" class="form-control" id="login" name="login" placeholder="Digite o login" value={{ user.login }}>
							</div>
							<div class="form-group">
								<label for="phone">Telefone</label>
								<input type="tel" class="form-control" id="phone" name="phone" placeholder="Digite o telefone" value={{ user.person.phone }}>
							</div>
							<div class="form-group">
								<label for="email">E-mail</label>
								<input type="email" class="form-control" id="email" name="email" placeholder="Digite o e-mail" value={{ user.person.email }}>
							</div>
							<div class="checkbox">
								<label>
									<input type="checkbox" name="isAdmin" value="1" {% if user.isAdmin %}checked{% endif %}>
									Acesso de Administrador
								</label>
							</div>
							<button type="submit" class="btn btn-primary mt-3">Salvar</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>
</div>
{% endblock %}
